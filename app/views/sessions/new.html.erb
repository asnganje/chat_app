<div class="flex flex-col-reverse gap-5 items-center justify-center font-serif font-semibold text-2xl my-5">
  <i class="fa-solid fa-power-off text-6xl text-orange-600 cursor-pointer"></i>
  Welcome to MessageMe - A Complete Chat App
</div>
<div class="border border-gray-400 shadow-md rounded-sm p-6 w-full max-w-3xl mx-auto flex">
  <div class="w-1/2 pr-6 flex flex-col items-center">
    <%=form_for(:session, html:{class:"w-full max-w-xs", role:"form"}, url: login_path) do |f|%>
      <div class="flex flex-col mb-3">
        <%= f.label :username, "Username", class:"mb-1 text-gray-700"%>
        <div class="flex items-center border border-gray-300 rounded-md p-2">
          <i class="fa-solid fa-user text-gray-500 mr-2"></i>
          <%=f.text_field :username, placeholder:"Username", class:"outline-none w-full"%>
        </div>
      </div>
      <div class="flex flex-col mb-4">
        <%= f.label :password, "Password", class:"mb-1 text-gray-700"%>
        <div class="flex items-center border border-gray-300 rounded-md p-2">
          <i class="fa-solid fa-lock text-gray-500 mr-2"></i>
          <%=f.password_field :password, placeholder: "Password", class:"outline-none w-full"%>
        </div>
      </div>
      <%= f.button "Login",  class:"bg-orange-500 flex items-center justify-center p-1 cursor-pointer text-white rounded-md w-1/2 mx-auto" %>
    <%end%>
  </div>
  <div class="relative w-0.5 bg-gray-300 h-50 mx-4 flex items-center justify-center">
    <span class="absolute left-1/2 transform -translate-x-1/2 bg-transparent px-2 text-gray-600">OR</span>
  </div>
  <div class="w-1/2 pl-6 flex flex-col items-center justify-center">
    <button class="flex items-center justify-center w-1/2 bg-orange-500 cursor-pointer gap-x-3 px-6 py-2 text-white rounded-md">
      <i class="fas fa-edit text-xl cursor-pointer"></i>
      Sign Up
    </button>
  </div>
</div>